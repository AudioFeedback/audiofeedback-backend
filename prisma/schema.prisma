// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Track {
  id        Int      @default(autoincrement()) @id
  title     String
  genre     String
  guid      String
  filetype  String
  authorId  Int
  author    User @relation(fields: [authorId], references: [id])
}

model User {
  id        Int      @default(autoincrement()) @id
  firstname String
  lastname  String
  role      Role
  tracks    Track[]
}

enum Role {
  FEEDBACKGEVER
  MUZIEKPRODUCER
}