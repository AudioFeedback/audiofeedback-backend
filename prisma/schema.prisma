// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Track {
  id       Int        @id @default(autoincrement())
  title    String
  genre    String
  guid     String
  filetype String
  authorId Int
  author   User       @relation(fields: [authorId], references: [id])
  feedback Feedback[]
}

model User {
  id        Int        @id @default(autoincrement())
  username  String
  firstname String
  lastname  String
  password  String
  role      Role
  tracks    Track[]
  feedback  Feedback[]
}

model Feedback {
  id        Int    @id @default(autoincrement())
  rating    Boolean
  comment   String
  timestamp Int
  userId    Int
  trackId   Int
  user      User   @relation(fields: [userId], references: [id])
  track     Track  @relation(fields: [trackId], references: [id])
}

enum Role {
  FEEDBACKGEVER
  MUZIEKPRODUCER
}
