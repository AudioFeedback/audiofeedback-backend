// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Track {
  id            Int            @id @default(autoincrement())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now())
  title         String
  genre         String
  authorId      Int
  author        User           @relation(fields: [authorId], references: [id])
  trackVersions TrackVersion[]
}

model TrackVersion {
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now())
  trackId       Int
  versionNumber Int
  description   String
  guid          String
  filetype      String
  feedback      Feedback[]
  track         Track      @relation(fields: [trackId], references: [id])
}

model User {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  username  String     @unique
  firstname String
  lastname  String
  password  String
  roles     Role[]
  tracks    Track[]
  feedback  Feedback[]
}

model Feedback {
  id        Int          @id @default(autoincrement())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now())
  timestamp Int
  rating    Boolean
  comment   String
  userId    Int
  trackId   Int
  user      User         @relation(fields: [userId], references: [id])
  track     TrackVersion @relation(fields: [trackId], references: [id])
}

enum Role {
  FEEDBACKGEVER
  MUZIEKPRODUCER
  ADMIN
}
